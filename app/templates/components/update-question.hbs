{{#if updateQuestionForm}}
<h2>Update {{question.author}}'s question!</h2>
<div class="question-form">
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="content">Content</label>
      {{input value=content id="content"}}
    </div>

    <div class="form-group">
      <label for="notes">Additional Notes</label>
      {{input value=notes id="notes"}}
    </div>

    <button class="btn btn-primary" {{action 'update' question}}>Update Question</button>
  </form>
</div>
{{else}}
  <button class="update-button btn btn-primary" {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
