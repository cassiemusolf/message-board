{{#if updateQuestionForm}}
<div class="question-form">
  <h2 class="form-title">Update {{question.author}}'s Question.</h2>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=question.author id="author"}}
    </div>

    <div class="form-group">
      <label for="content">Content</label>
      {{input value=question.content id="content"}}
    </div>

    <div class="form-group">
      <label for="notes">Additional Notes</label>
      {{input value=question.notes id="notes"}}
    </div>

    <button class="btn btn-primary update-button2" {{action 'update' question}}>Update Question</button>
  </form>
</div>
{{else}}
  <button class="update-button btn btn-primary" {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
