{{#if updateQuestionForm}}
<h2>Update {{question.author}}'s question!</h2>
<div class="question-form">
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=question.author id="author"}}
    </div>

    <div class="form-group">
      <label for="content">Content</label>
      {{input value=question.content id="content"}}
    </div>

    <div class="form-group">
      <label for="notes">Additional Notes</label>
      {{input value=question.notes id="notes"}}
    </div>

    <button {{action 'update'}}>Update Question</button>
  </form>
</div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}  
