{{#if addNewAnswer}}

<div class="answer-form">
<h2 class="form-title">Add An Answer</h2>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>
      <button class="btn btn-primary" {{action 'saveAnswer'}}>Save</button>
    </form>
</div>
{{else}}
<div class="new-answer">
<button class="btn btn-primary" {{action 'answerFormShow'}}>New Answer</button>
</div>
{{/if}}
