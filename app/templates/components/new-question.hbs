{{#if addNewQuestion}}
<div class="question-form">
  <h1>Ask a New Question</h1>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="content">Content</label>
      {{input value=content id="content"}}
    </div>

    <div class="form-group">
      <label for="notes">Additional Notes</label>
      {{input value=notes id="notes"}}
    </div>

    <button class="btn btn-primary" {{action 'saveQuestion'}}>Save</button>
  </form>
</div>
{{else}}
<button class="btn btn-primary question-button"  {{action 'questionFormShow'}}>Ask a Question</button>
{{/if}}
